<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:paddingBottom="@dimen/activity_vertical_margin"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingRight="@dimen/activity_horizontal_margin"
        android:paddingTop="@dimen/activity_vertical_margin"
        tools:context="id.sch.smktelkom_mlg.tugas01.xirpl431.tugas001.MainActivity">

        <TextView
            style="@style/Base.TextAppearance.AppCompat.Headline"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/abc_input_method_navigation_guard"
            android:text="FORM PENDAFTARAN KURSUS BAHASA"
            android:textAlignment="center"
            android:textColor="@android:color/holo_orange_light"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/textView"
            style="@style/Base.TextAppearance.AppCompat.Subhead"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center_vertical"
            android:background="@android:color/holo_orange_light"
            android:text="Jalan Raya Sulfat 32A, Malang, Jawa Timur, Indonesia"
            android:textAlignment="center"
            android:textStyle="bold" />

        <ImageView
            android:id="@+id/imageView"
            android:layout_width="match_parent"
            android:layout_height="160dp"
            android:src="@drawable/logo" />

        <TextView
            android:id="@+id/textViewTP"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Tanggal Pendaftaran"
            android:textStyle="bold" />

        <EditText
            android:id="@+id/editTextTP"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Tanggal Pendaftaran" />

        <TextView
            android:id="@+id/textViewJP"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Jenis Paket"
            android:textStyle="bold" />

        <CheckBox
            android:id="@+id/checkBoxReg"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:checked="false"
            android:text="Reguler" />

        <CheckBox
            android:id="@+id/checkBoxPK"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:checked="false"
            android:text="Paket Khusus" />

        <TextView
            android:id="@+id/textViewNama"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Nama Lengkap Pendaftar"
            android:textStyle="bold" />

        <EditText
            android:id="@+id/editTextNama"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Nama Pendaftar" />

        <TextView
            android:id="@+id/textViewTTL"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Tempat &amp; Tanggal Lahir"
            android:textStyle="bold" />

        <EditText
            android:id="@+id/editTextTTL"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Tempat Tanggal Lahir" />

        <TextView
            android:id="@+id/textViewAlamat"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Alamat"
            android:textStyle="bold" />

        <EditText
            android:id="@+id/editTextAlamat"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Alamat" />

        <TextView
            android:id="@+id/textViewKota"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Kota"
            android:textStyle="bold" />

        <EditText
            android:id="@+id/editTextKota"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Kota" />

        <TextView
            android:id="@+id/textViewJK"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Jenis Kelamin"
            android:textStyle="bold" />

        <RadioGroup
            android:id="@+id/radioGroupJP"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <RadioButton
                android:id="@+id/radioButtonPria"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:checked="false"
                android:text="Pria" />

            <RadioButton
                android:id="@+id/radioButtonWanita"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:checked="false"
                android:text="Wanita" />
        </RadioGroup>

        <TextView
            android:id="@+id/textViewJur"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Jurusan Kursus Bahasa"
            android:textStyle="bold" />

        <Spinner
            android:id="@+id/spinnerJurusan"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:entries="@array/jurusan" />

        <Button
            android:id="@+id/buttonOK"
            style="@style/Base.TextAppearance.AppCompat.Title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/button"
            android:text="DAFTAR"
            android:textColor="@android:color/white" />

        <TextView
            android:id="@+id/textViewHasil"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:text="Hasil" />
    </LinearLayout>
</ScrollView>
